@model LibraryManagementSystem.BLL.DTos.BorrowBookDto

@{
    ViewData["Title"] = "Borrow Book";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white"> <h4 class="mb-0">Borrow Book</h4> </div> <div class="card-body">
            <h5 class="fw-semibold text-secondary mb-4"> <i class="bi bi-book"></i> @Model.BookTitle </h5>
            
            <form asp-action="Borrow" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="BookId" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Borrow Date</label>
                    <input type="text"
                           class="form-control"
                           value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm")"
                           disabled />
                    <div class="form-text text-muted">
                        Borrow date is automatically set to the current time.
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle"></i> Confirm Borrow
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>