@model List<LibraryManagementSystem.BLL.DTos.BookDto>

@{
    ViewData["Title"] = "Books List";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<a asp-action="Create" class="btn btn-success mb-3">+ Add New Book</a>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Description</th>
            <th>Author</th>
            <th style="width: 160px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookTitle</td>
                <td>@book.Genre</td>
                <td style="max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" title="@book.Description">
                    @book.Description
                </td>
                <td>@book.AuthorName</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary btn-sm flex-fill">Edit</a>

                        <form asp-action="Delete" method="post" class="flex-fill m-0">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@book.Id" />
                            <button type="submit" class="btn btn-danger btn-sm w-100">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
