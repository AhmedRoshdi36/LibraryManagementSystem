@model List<LibraryManagementSystem.BLL.DTos.AuthorDto>

@{
    ViewData["Title"] = "Authors";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success shadow">+ Add New Author</a>
    </div>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Website</th>
                <th>Bio</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td>@author.FullName</td>
                    <td>@author.Email</td>
                    <td>
                        @if (!string.IsNullOrEmpty(author.Website))
                        {
                            <a href="@author.Website"
                               target="_blank"
                               class="text-decoration-none text-info">
                                @author.Website
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </td>
                    <td style="max-width: 200px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" title="@author.Bio">
                        @(string.IsNullOrEmpty(author.Bio) ? "—" : author.Bio)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@author.Id"
                           class="btn btn-sm btn-warning me-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@author.Id"
                           class="btn btn-sm btn-danger"
                           @* onclick="return confirm('Are you sure you want to delete this author?');" *@
                           >
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
