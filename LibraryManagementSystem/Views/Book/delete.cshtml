@model LibraryManagementSystem.BLL.DTos.BookDto

<h1>Book Details</h1>

<div>
    <h4>@Model.BookTitle</h4>
    <p><strong>Genre:</strong> @Model.Genre</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Author Id:</strong> @Model.AuthorId</p>
</div>

<form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this book?');">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
